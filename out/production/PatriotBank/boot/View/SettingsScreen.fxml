<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #1d1e2a;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boot.Controllers.Settings">
   <children>
      <AnchorPane fx:id="change" layoutX="318.0" layoutY="68.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <JFXTextField fx:id="oldpass" alignment="CENTER" focusColor="#3a4b7c" labelFloat="true" layoutX="26.0" layoutY="23.0" promptText="Old Password" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXTextField fx:id="newPass" alignment="CENTER" focusColor="#3a4b7c" labelFloat="true" layoutX="28.0" layoutY="79.0" promptText="New Password" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXTextField fx:id="confirmNewPassword" alignment="CENTER" focusColor="#3a4b7c" labelFloat="true" layoutX="23.0" layoutY="141.0" promptText="New Password" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXButton fx:id="submit" layoutX="136.0" layoutY="177.0" onAction="#handleSubmit" prefHeight="23.0" prefWidth="64.0" text="Submit" textFill="WHITE" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="info" layoutX="323.0" layoutY="66.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <JFXTextField fx:id="accountID" alignment="CENTER" editable="false" focusColor="#3a4b7c" layoutX="20.0" layoutY="26.0" promptText="Account ID" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXTextField fx:id="username" alignment="CENTER" editable="false" focusColor="#3a4b7c" layoutX="24.0" layoutY="80.0" promptText="Username" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXTextField fx:id="email" alignment="CENTER" editable="false" focusColor="#3a4b7c" layoutX="20.0" layoutY="142.0" promptText="Email" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
            <JFXTextField fx:id="dob" alignment="CENTER" editable="false" focusColor="#3a4b7c" layoutX="21.0" layoutY="187.0" promptText="DOB" styleClass="jfx-text-field" stylesheets="@style.css" unFocusColor="#0000" />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #1d1e2a;">
         <children>
            <JFXButton fx:id="changePass" layoutX="80.0" layoutY="103.0" onAction="#handleChangePassword" text="Change Password" textFill="WHITE" />
            <JFXButton fx:id="accountInfo" layoutX="75.0" layoutY="142.0" onAction="#handleAccountInfo" text="Account Information" textFill="WHITE" />
            <JFXButton fx:id="closeAccount" layoutX="90.0" layoutY="178.0" onAction="#handleCloseAccount" text="Close Account" textFill="WHITE" />
            <JFXButton layoutX="14.0" layoutY="10.0" text="Back" textFill="WHITE" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
